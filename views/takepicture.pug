extends layout

block content
	script(src='/javascripts/client-takepicture.js')
	.jumbotron.container-fluid#takepicture-container
		p
			.div.text-center
				.div.btn-group
					button#savePictureButton(type="button" class="btn btn-default btn-lg" data-toggle="tooltip" title="Take picture now and save") Save picture
					button#liveViewButton(type="button" class="btn btn-default btn-lg" data-toggle="tooltip" title="Show a live picture without saving") Live view
		p
			.div.text-center.hidden#pictureViewDiv
				.col-sm-6.col-sm-offset-3.col-md-6.col-md-offset-3.col-lg-6.col-lg-offset-3
					a#pictureViewAnchor
						img#pictureViewImg(class="img-responsive img-thumbnail")            