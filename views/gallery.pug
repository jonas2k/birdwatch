extends layout

block content
	script(src='/javascripts/client-gallery.js')
	.jumbotron.container-fluid#gallery-container
		each image in images
			.col-sm-2.col-md-3.col-lg-3.text-center
				a.thumbnail.nomargin(href=image)
					img(src=image)
				button.btn.btn-xs.twitterbutton(id=image value=image data-image=image data-toggle="modal" data-target="#tweetConfirmation")
					img.twitterbuttonimage(src="images/twitter.png")
	.modal.fade#tweetConfirmation(role="dialog")
		.modal-dialog(role="document")
			.modal-content
				.modal-header
					button.close(type="button" data-dismiss="modal" aria-label="Close")
						span(aria-hidden="true") &times;
					h4.modal-title Sure?
				.modal-body
					p Are you sure you want to tweet this image using your configured Twitter account?
				.modal-footer
					button.btn.btn-danger#modalCancelButton(type="button" data-dismiss="modal") Cancel
					button.btn.btn-success#modalSendButton(type="button" data-dismiss="modal") Send